{
  "compilerOptions": {
    // Path resolution
    "baseUrl": "./src",
    "moduleResolution": "node",
    // We only use tsc for type checking
    "declarationDir": "./declarations",
    "emitDeclarationOnly": true,
    "declaration": true,
    // Build settings
    "module": "ESNext",
    "target": "ESNext",
    // Features
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // Strictness / Correctness
    "strict": true,
    "paths": {
      "ember-apply": ["."],
      "ember-apply/*": ["./*"],
      "*": ["*"]
    }
  },
  "include": ["src/**/*", "applyables/**/*", "types/*"],
  "exclude": ["node_modules/**/*"]
}
