{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/ember/*"
  ],
  "license": "MIT",
  "author": "NullVoxPopuli",
  "scripts": {
    "build:types": "tsc --build",
    "test": "yarn turbo run test",
    "lint:fix": "yarn turbo run lint:fix",
    "lint:js": "yarn turbo run lint:js"
  },
  "devDependencies": {
    "turbo": "^1.0.24"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "dev": {
        "dependsOn": [
          "^dev"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {
        "dependsOn": [
          "^lint:js"
        ]
      },
      "lint:fix": {},
      "lint:js": {},
      "test": {}
    }
  }
}
